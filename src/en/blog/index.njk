---
layout: base.njk
title: Blog
translationKey: blog-index
permalink: /en/blog/
---

<section class="section blog-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <h1 class="mb-5">{{ 'blogTitle' | t }}</h1>
      </div>
    </div>

    <div class="blog-zig-zag">
      {% for post in collections.blogEn %}
         {% set isEven = loop.index % 2 == 0 %}
         <div class="blog-row {{ 'even' if isEven else 'odd' }}">
           
           <!-- Image Area -->
           <div class="blog-row-image-wrapper">
             <a href="{{ post.url }}">
               {% if post.data.ogImage %}
                <img src="{{ post.data.ogImage }}" alt="" class="blog-row-image" loading="lazy">
               {% else %}
                 <!-- Placeholder -->
                 <div style="background: var(--color-gray-100); width: 100%; height: 0; padding-bottom: 75%;"></div>
               {% endif %}
             </a>
           </div>

           <!-- Header Area -->
           <div class="blog-row-header">
             <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
             <div class="blog-row-meta">
               {% if post.data.category %}
               <a href="#">{{ post.data.category | t }}</a>
               {% endif %}
               / {{ post.date | date("LLLL d, yyyy", lang) }}
             </div>
           </div>

           <!-- Excerpt Area -->
           <div class="blog-row-excerpt">
             <p>{{ post.data.description }} <a href="{{ post.url }}" class="read-more">{{ 'readMore' | t }}</a></p>
           </div>
           
         </div>
      {% endfor %}
    </div>
  </div>
</section>
