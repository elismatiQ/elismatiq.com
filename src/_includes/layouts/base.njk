<!DOCTYPE html>
<html lang="{{ lang | default('en') }}">
<head>
  {% include "partials/seo-head.njk" %}
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/css/main.css">
  
  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f15a28">
  <meta name="apple-mobile-web-app-title" content="elismatiQ">
  <meta name="application-name" content="elismatiQ">
  <meta name="msapplication-TileColor" content="#fdfcfc">
  <meta name="theme-color" content="#fdfcfc">
</head>
<body>
  <!-- Skip Link for Accessibility -->
  <a class="skip-link" href="#main-content">{{ 'skipToContent' | t }}</a>
  
  {% include "partials/header.njk" %}
  
  <main id="main-content">
    {{ content | safe }}
  </main>
  
  {% include "partials/footer.njk" %}
  
  <!-- Minimal JS -->
  <script src="/assets/js/main.js" defer></script>
</body>
</html>
