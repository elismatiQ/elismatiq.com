---
layout: base.njk
---
<article class="post">
  <header class="post-header section">
    <div class="container">
      <p class="post-meta">
        <time datetime="{{ date | dateFormat }}">
          {% if lang == 'fr' %}
            {{ date | dateFormatFr }}
          {% else %}
            {{ date | dateFormat }}
          {% endif %}
        </time>
        {% if category %}
        <span class="post-category">{{ category }}</span>
        {% endif %}
      </p>
      <h1>{{ title }}</h1>
      {% if description %}
      <p class="post-description">{{ description }}</p>
      {% endif %}
    </div>
  </header>
  
  <div class="post-content section">
    <div class="container prose">
      {{ content | safe }}
    </div>
  </div>
</article>
