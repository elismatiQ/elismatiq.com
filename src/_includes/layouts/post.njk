---
layout: base.njk
---
<article class="post">
  <header class="post-header section">
    <div class="container">
      <h1>{{ title }}</h1>
      <p class="post-meta">
        <time datetime="{{ date | dateFormat }}">
          {% if lang == 'fr' %}
          {{ date | dateFormatFr }}
          {% else %}
          {{ date | dateFormat }}
          {% endif %}
        </time>
        {% if category %}
        <span class="post-category">/ {{ category }}</span>
        {% endif %}
      </p>

      {% if ogImage %}
      <div class="post-featured-image">
        <img src="{{ ogImage }}" alt="{{ title }}" loading="eager">
      </div>
      {% endif %}

      {% if description %}
      <p class="post-description">{{ description }}</p>
      {% endif %}
    </div>
  </header>
  
  <div class="post-content section">
    <div class="container prose">
      {{ content | safe }}
    </div>
  </div>
</article>
