---
layout: base.njk
---
<article class="page">
  <header class="page-header section">
    <div class="container">
      <h1>{{ title }}</h1>
      {% if description %}
      <p class="page-description">{{ description }}</p>
      {% endif %}
    </div>
  </header>
  
  <div class="page-content section">
    <div class="container prose">
      {{ content | safe }}
    </div>
  </div>
</article>
