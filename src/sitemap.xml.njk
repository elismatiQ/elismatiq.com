---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
{%- for item in collections.all %}
  {%- if item.data.lang == 'en' and item.url and item.url != '/404.html' %}
  <url>
    <loc>{{ site.url }}{{ item.url | url }}</loc>
    <lastmod>{{ item.date.toISOString() }}</lastmod>
    {%- if item.data.translationKey %}
      {%- for alt in collections.all %}
        {%- if alt.data.translationKey == item.data.translationKey %}
    <xhtml:link rel="alternate" hreflang="{{ alt.data.lang }}" href="{{ site.url }}{{ alt.url | url }}"/>
        {%- endif %}
      {%- endfor %}
      {%- for alt in collections.all %}
        {%- if alt.data.translationKey == item.data.translationKey and alt.data.lang == 'en' %}
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ alt.url | url }}"/>
        {%- endif %}
      {%- endfor %}
    {%- endif %}
  </url>
  {%- endif %}
{%- endfor %}
{%- for item in collections.all %}
  {%- if item.data.lang == 'fr' and item.url and item.url != '/404.html' %}
  <url>
    <loc>{{ site.url }}{{ item.url | url }}</loc>
    <lastmod>{{ item.date.toISOString() }}</lastmod>
    {%- if item.data.translationKey %}
      {%- for alt in collections.all %}
        {%- if alt.data.translationKey == item.data.translationKey %}
    <xhtml:link rel="alternate" hreflang="{{ alt.data.lang }}" href="{{ site.url }}{{ alt.url | url }}"/>
        {%- endif %}
      {%- endfor %}
      {%- for alt in collections.all %}
        {%- if alt.data.translationKey == item.data.translationKey and alt.data.lang == 'en' %}
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url }}{{ alt.url | url }}"/>
        {%- endif %}
      {%- endfor %}
    {%- endif %}
  </url>
  {%- endif %}
{%- endfor %}
</urlset>
